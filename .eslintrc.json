{
    "extends": ["airbnb-typescript/base"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": ["@typescript-eslint"],
    "env": {
      "node": true,
      "es2021": true
    },
    "rules": {
      "no-console": "off",             // Allow console logs (can be useful in CLI tools)
      "class-methods-use-this": "off",  // Disable forcing this usage in methods (useful for code generation)
      "no-use-before-define": "off",    // TypeScript handles variable hoisting well
      "import/prefer-default-export": "off", // Allow named exports
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",   // Ignore unused variables prefixed with _
          "varsIgnorePattern": "^_"
        }
      ]
    }
  }
  